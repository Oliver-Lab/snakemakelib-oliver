#!/bin/bash

SNAKEFILE=$1
EXTRA=$2

snakemake \
    -p \
    -s $SNAKEFILE \
    --rerun-incomplete \
    --jobname "s.{rulename}.{jobid}.sh" \
    -j 999 \
    --verbose \
    --cluster-config $HOME/slurm_cluster_config.yaml \
    --cluster "sbatch --cpus-per-task={threads} --mem={cluster.mem} --time={cluster.time} --output=slurm_logs/$EXTRA.%j --error=slurm_logs/$EXTRA.%j" \
    $EXTRA \
