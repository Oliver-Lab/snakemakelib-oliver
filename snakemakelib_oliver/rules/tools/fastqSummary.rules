#!/usr/bin/env python

rule summariesFq:
    input: '{prefix}.fastq.gz'
    output: '{prefix}.fastq.summary'
    run:
        from snakemakelib_oliver.tools.fastq import FastqSummary
        fq = FastqSummary(str(input))
        tbl = fq.getSummary()
        with open(output[0], 'w') as FH:
            FH.write(tbl)
